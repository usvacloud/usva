root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_size = 4
indent_style = space
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.{yml,yaml,json}]
indent_size = 2
indent_style = space

[*.md]
tab_width = 2
trim_trailing_whitespace = false
